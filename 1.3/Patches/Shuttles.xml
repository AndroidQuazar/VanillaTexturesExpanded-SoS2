<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName = "HeavyShuttle"]/graphicData/graphicClass</xpath>
				<value>
				    <graphicClass>Graphic_Multi</graphicClass>
			    </value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName = "HeavyShuttle"]/graphicData/texPath</xpath>
				<value>
				    <texPath>Things/Shuttle/Shuttle_HeavyCargo/Shuttle_HeavyCargo</texPath>
			    </value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "HeavyShuttle"]</xpath>
				<value>
				    <defaultPlacingRot>South</defaultPlacingRot>
			    </value>
			</li>
		</operations>	
	</Operation>
</Patch>